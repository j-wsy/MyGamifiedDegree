<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:scrollbarStyle="insideOverlay"
    tools:context=".RewardBoardNew">


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    tools:context=".RewardBoardNew">



    <!-- Title -->
    <ImageView
        android:id="@+id/image1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/badgetitle"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="16dp" />

    <!-- Badges -->
    <TextView
        android:id="@+id/badgeView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="152dp"
        android:layout_marginLeft="152dp"
        android:layout_marginTop="120dp"
        android:text="Badges"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp" />



    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="15dp"
        android:layout_gravity="center|start"
        android:orientation="vertical">


        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="1dp">

            <!-- Badge 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/badge1"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/newbie"
                    android:clickable="true"
                    android:contentDescription="@string/newbie_badge_message"
                    android:onClick="showNewbieIntro"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Newbie" />


            </LinearLayout>


            <!-- Badge 2-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/badge2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/t1y1"
                    android:contentDescription="@string/term1_yr1_badge_message"
                    android:onClick="showT1Y1Intro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Term 1 Yr 1" />


            </LinearLayout>

            <!-- Badge 3-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/badge3"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/t2y1"
                    android:contentDescription="@string/term2_yr1_badge_message"
                    android:onClick="showT2Y1Intro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Term 2 Yr 1" />


            </LinearLayout>


        </LinearLayout>


        <!-- row 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="1dp">


            <!-- Badge 4 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/badge4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/t3y1"
                    android:contentDescription="@string/yr1_badge_message"
                    android:onClick="showT3Y1Intro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Year 1" />


            </LinearLayout>

            <!-- Badge 5-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/badge5"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/javaist"
                    android:contentDescription="@string/javaist_badge_message"
                    android:onClick="showJavaistIntro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Javaist" />


            </LinearLayout>

            <!-- Badge 6-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/badge6"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/javasuperstar"
                    android:contentDescription="@string/java_star_badge_message"
                    android:onClick="showJavaStarIntro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Java Star" />


            </LinearLayout>


        </LinearLayout>


        <!-- row 3 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginRight="1dp">


            <!-- Badge 7 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/badge7"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/javaexplorer"
                    android:contentDescription="@string/java_xplorer_badge_message"
                    android:onClick="showJavaXplorerIntro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Java Xplorer" />


            </LinearLayout>


            <!-- Badge 8-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/badge8"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/javaguru"
                    android:contentDescription="@string/java_guru_badge_message"
                    android:onClick="showJavaGuruIntro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Java Guru" />


            </LinearLayout>


            <!-- Badge 9-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/badge9"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/groupie"
                    android:contentDescription="@string/groupie_badge_message"
                    android:onClick="showGroupieIntro"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="Groupie" />




            </LinearLayout>


        </LinearLayout>



    </LinearLayout>



</RelativeLayout>

    </ScrollView>