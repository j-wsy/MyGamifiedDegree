<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textview1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Contacts"
            android:textSize="35sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Having issues with your progression planning?\n\nContact the UNSW Student Center with your enquiry via phone or e-mail or visit us on campus!"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textview1" />

        <ImageView
            android:id="@+id/centralMap"
            android:layout_width="match_parent"
            android:layout_height="240sp"
            android:layout_marginTop="25dp"
            android:scaleType="centerCrop"
            android:src="@drawable/map"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description" />

        <TextView
            android:id="@+id/phoneView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="P:   9385 8500"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/centralMap" />

        <Button
            android:id="@+id/buttoncall"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_button"
            android:text="Call"
            app:layout_constraintStart_toStartOf="@id/phoneView"
            app:layout_constraintTop_toBottomOf="@id/centralMap"
            tools:layout_editor_absoluteX="275dp"
            tools:layout_editor_absoluteY="456dp" />

        <TextView
            android:id="@+id/emailView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="25dp"
            android:text="E:   studentcentral@unsw.edu.au"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/phoneView" />

        <Button
            android:id="@+id/buttonemail"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@+id/buttoncall"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/rounded_button"
            android:text="Email"
            app:layout_constraintStart_toStartOf="@id/emailView"
            app:layout_constraintTop_toBottomOf="@id/buttoncall" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>