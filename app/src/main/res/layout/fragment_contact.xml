<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Fragment"
        android:textSize="30sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/textview1"
            android:paddingVertical="20dp"
            android:paddingHorizontal="20dp"
            android:text="Having issues with your progression planning?\n\nContact the UNSW Student Center with your enquiry via phone or e-mail!"/>



        <Button
            android:id="@+id/buttoncall"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_centerInParent="true"
            android:text="Call Student Center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/buttonemail"
            android:layout_width="wrap_content"
            android:layout_height="85dp"
            android:layout_below="@+id/buttoncall"
            android:layout_centerHorizontal="true"
            android:text="Email Student Center "
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



</RelativeLayout>